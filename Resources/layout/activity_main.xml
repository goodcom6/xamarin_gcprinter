<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:backgroundTint="@android:color/darker_gray"
        android:gravity="top"
        android:orientation="vertical" >

		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
			<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56sp"
                >

				<EditText
                    android:id="@+id/ticket_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="GcPrinter"
                    android:textAlignment="center"
                    android:textSize="28sp" />

			</LinearLayout>

			<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48sp"
                android:orientation="horizontal">
				<EditText
                    android:id="@+id/item1_left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="2 x">
				</EditText>
				<EditText
                    android:id="@+id/item1_mid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:text="test1">
				</EditText>
				<EditText
                    android:id="@+id/item1_right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:textSize="20sp"
                    android:text="3.00">
				</EditText>
			</LinearLayout>
			<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp" >
				<EditText
                    android:id="@+id/item1_opt1_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="  +option11"/>
				<EditText
                    android:id="@+id/item1_opt1_amt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:text="1.00"/>
			</LinearLayout>
			<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp">
				<EditText
                    android:id="@+id/item1_opt2_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="  +option12"/>
				<EditText
                    android:id="@+id/item1_opt2_amt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:text="2.00"/>
			</LinearLayout>
			<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48sp"
                android:orientation="horizontal">
				<EditText
                    android:id="@+id/item2_left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="1 x">
				</EditText>
				<EditText
                    android:id="@+id/item2_mid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:text="test2">
				</EditText>
				<EditText
                    android:id="@+id/item2_right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:textSize="20sp"
                    android:text="3.00">
				</EditText>
			</LinearLayout>
			<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp">
				<EditText
                    android:id="@+id/item2_opt1_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="  +option21"/>
				<EditText
                    android:id="@+id/item2_opt1_amt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:text="2.00"/>
			</LinearLayout>
			<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48sp">

				<TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center|center_vertical"
                    android:text="Barcode:"
                    android:textAlignment="center">

				</TextView>
				<EditText
                    android:id="@+id/barcode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:text="1122334455"
                    />
			</LinearLayout>
			<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
				<EditText
                    android:id="@+id/ed_text"
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    android:ems="10"
                    android:layout_weight="2"
                    android:inputType="textMultiLine"
                    android:password="false"
                    android:singleLine="false"
                    android:text="Note:Please enter the content you want to print" >

					<requestFocus />
				</EditText>
			</LinearLayout>
			<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

				<Button
                    android:id="@+id/btn_print"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@string/btn_button"
                    android:text="@string/btn_button" />

				<Button
                    android:id="@+id/btn_bmp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@string/btn_button"
                    android:text="@string/btn_bmp" />
			</LinearLayout>
		</LinearLayout>


	</LinearLayout>
</RelativeLayout>
